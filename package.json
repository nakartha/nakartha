{
  "name": "shadcn-ui-monorepo",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "build": "turbo build",
    "dev": "turbo dev",
    "lint": "turbo lint",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "migrate:dev": "pnpm -F @workspace/db prisma:migrate:dev",
    "migrate:deploy": "pnpm -F @workspace/db prisma:migrate:deploy",
    "generate": "pnpm -F @workspace/db prisma:generate",
    "db:studio": "pnpm -F @workspace/db prisma:studio",
    "clean:modules": "find . -name \"node_modules\" -type d -prune -exec rm -rf '{}' +",
    "clean:store": "pnpm store prune",
    "clean": "pnpm run clean:modules && pnpm run clean:store",
    "reset": "pnpm run clean && rm -rf node_modules pnpm-lock.yaml && pnpm install",
    "install:clean": "pnpm run reset"
  },
  "devDependencies": {
    "@workspace/eslint-config": "workspace:*",
    "@workspace/typescript-config": "workspace:*",
    "prettier": "^3.5.1",
    "turbo": "^2.4.2",
    "typescript": "5.7.3"
  },
  "packageManager": "pnpm@10.4.1",
  "engines": {
    "node": ">=20"
  }
}
